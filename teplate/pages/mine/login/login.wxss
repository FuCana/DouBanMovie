.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #efefef;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #777;
  background-color: #fff;
}

.on {
  color: #000;
  border-bottom: 5rpx solid #000;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.item {
  display: flex;
  flex-direction: row;
}

.item>text {
  width: 20%;
  height: 90rpx;
  line-height: 90rpx;
}

.item>input {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
}

.button {
  width: 90%;
  border-radius: 6rpx;
  margin: 40rpx auto 70rpx;
}

button {
  background-color: #282828;
  color: #fff;
}

.hr {
  height: 1px;
  width: 50%;
  background-color: #ccc;
  color: #ccc;
  position: relative;
  margin: 0 auto;
  font-size: 13px;
}

.hr>text {
  display: flex;
  position: absolute;
  top: -15rpx;
  left: 107rpx;
  background-color: #efefef;
  text-align: center;
  padding: 7rpx 15rpx;
}
