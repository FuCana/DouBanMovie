/* pages/cinema/cinema-detial/cinema-detial.wxss */
.head{
	padding:20rpx 15rpx;
	display: flex;
	flex-direction: row;
	background: #fefefe;
}
.location{
	color:#777;
	font-size: 14px;
	width:85%;

}
.location>text{
	height:55rpx;
	line-height:55rpx;
}
.head_right{
	display: flex;
	flex-direction: column;
	border-left:1px solid #ddd;
}
.head_right>image{
	width:35rpx;
	height:35rpx;
	padding:10rpx 30rpx;
	margin:0 auto;

}
.head_right>text{
	display: block;
	font-size:12px;
	color:#777;
	margin:0 auto;
	text-align: center;
}
.movie-banner{
	width: 100%;
	height: 300rpx;
	background: #ddd;
}





